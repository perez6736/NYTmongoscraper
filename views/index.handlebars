<div class="container">

    <!-- Jumbotron  -->
    <div class="jumbotron">
      <h1>New York Times Scraper</h1>
    </div>

    <div class="row">
      <!-- Results Panel -->
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Search Results</h3>
          </div>
          <div class="panel-body" id="well-section">
              {{#each articles}}
              <div class="panel panel-default">
                <div class="panel-heading"> <a href= {{link}}> {{title}} </a> 
                    <button class = "btn btn-primary saveArticle" data-id = {{_id}} type="save">Save Article </button>
                </div>
              </div>
              {{/each}}
          </div>
        </div>
      </div>
    </div>
    <a href="/save"> <button class = "btn btn-primary" id = "viewSavedBtn" type="SavePage"> View Saved Articles  </button></a>
    <a href="/scrape"> <button class = "btn btn-primary" id = "viewSavedBtn" type="SavePage"> Search for Atricles  </button></a>
  </div>